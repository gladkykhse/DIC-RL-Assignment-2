{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Q-Learning Train and Eval - Enhanced Rewards",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/train_q_learning.py",
      "args": [
        "grid_configs/medium_grid.npy",
        "--no_gui",
        "--episodes",
        "15000",
        "--sigma",
        "0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "DQN Training - Medium Grid - Enhanced Rewards",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/train_and_run_dqn.py",
      "args": [
        "medium_grid.npy",
        "--mode",
        "train",
        "--no_gui",
        "--episodes",
        "250",
        "--sigma",
        "0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "DQN Evaluation - Medium Grid",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/train_and_run_dqn.py",
      "args": [
        "medium_grid.npy",
        "--mode",
        "evaluate",
        "--no_gui",
        "--eval_episodes",
        "10",
        "--sigma",
        "0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
